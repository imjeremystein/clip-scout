# =============================================================================
# Clip Scout Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/clipscout?schema=public"

# Authentication (NextAuth)
AUTH_SECRET="generate-a-32-char-secret-here"
AUTH_URL="http://localhost:3000"

# Redis (for job queue)
REDIS_URL="redis://localhost:6379"

# YouTube API (Required)
# Get from: https://console.cloud.google.com/ (enable YouTube Data API v3)
YOUTUBE_API_KEY=""

# Google AI / Gemini (Required for transcript extraction)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=""

# OpenAI (Optional - for embeddings)
OPENAI_API_KEY=""

# Anthropic (Optional - for advanced analysis)
ANTHROPIC_API_KEY=""

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"
